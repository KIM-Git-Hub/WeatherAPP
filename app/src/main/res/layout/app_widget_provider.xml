<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/currentAddressWidget"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">


        <ImageView

            android:id="@+id/weatherIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/weatherIcon" />

        <TextView
            android:id="@+id/currentTempWidget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIcon2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/weatherIcon" />

            <TextView
                android:id="@+id/dayOfWeekWidget1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIcon3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/weatherIcon" />

            <TextView
                android:id="@+id/dayOfWeekWidget2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/weatherIcon4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@string/weatherIcon" />

            <TextView
                android:id="@+id/dayOfWeekWidget3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/updateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp" />


    </LinearLayout>


</LinearLayout>